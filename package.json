{
    "name": "a-di",
    "version": "1.0.26",
    "description": "Dependency injection library for Javascript/Typescript",
    "main": "lib/umd/di.js",
    "types": "./lib/di.d.ts",
    "exports": {
        ".": {
            "import": "./lib/esm/alot.js",
            "require": "./lib/umd/alot.js"
        }
    },
    "directories": {
        "test": "test"
    },
    "scripts": {
        "server": "atma server --TEST",
        "test": "atma test",
        "bundle": "app-bundler",
        "watch": "app-bundler --watch",
        "build": "npm run bundle && npm run dts",
        "-server": "atma server",
        "dts": "tsc -p tsconfig-build.json && atma run tools/build-dts",
        "release": "echo \"Run atma pub -m \"message\"\"",
        "typedoc": "typedoc --tsconfig ./tsconfig-typedoc.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tenbits/di.git"
    },
    "keywords": [
        "di",
        "dependency",
        "injection",
        "IoC"
    ],
    "author": "Alex Kit (alex.kit@atmajs.com)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tenbits/di/issues"
    },
    "homepage": "https://github.com/tenbits/di#readme",
    "devDependencies": {
        "@types/jquery": "^3.5.6",
        "@types/node": "^13.7.1",
        "@types/sinon": "^9.0.0",
        "app-bundler": "^0.2.6",
        "atma": "^0.15.22",
        "atma-io": "^1.2.29",
        "atma-loader-ts": "^1.2.4",
        "dts-bundle": "^0.7.3",
        "maskjs": "^0.57.2",
        "shellbee": "^0.5.29",
        "sinon": "^9.0.1",
        "typedoc": "^0.21.4"
    },
    "app-bundler": {
        "apps": {
            "umd": {
                "outputMain": "lib/umd/di.js",
                "package": {
                    "module": "commonjs",
                    "moduleName": "di",
                    "moduleWrapper": "umd",
                    "commonjs": {
                        "output": "simplified"
                    }
                }
            },
            "esm": {
                "outputMain": "lib/esm/di.mjs",
                "package": {
                    "module": "commonjs",
                    "moduleWrapper": "esm",
                    "commonjs": {
                        "output": "simplified"
                    }
                }
            }
        },
        "common": {
            "file": "src/exports.ts",
            "extensions": {
                "io": {
                    "type": "js"
                }
            },
            "defaultExtensions": {
                "js": "ts"
            },
            "middlewares": {
                "ts": [
                    "atma-loader-ts:read"
                ]
            },
            "settings": {
                "atma-loader-ts": {
                    "typescript": {
                        "compilerOptions": {
                            "module": "CommonJS",
                            "target": "ES2015"
                        }
                    }
                }
            }
        }
    },
    "atma": {
        "plugins": [
            "atma-loader-ts"
        ],
        "settings": {
            "include": {
                "amd": true,
                "extentionDefault": {
                    "js": "ts"
                }
            },
            "atma-utest": {
                "include": {
                    "amd": true
                }
            },
            "atma-loader-ts": {
                "extensions": [
                    "test",
                    "ts"
                ],
                "typescript": {
                    "compilerOptions": {
                        "#if (TEST)": {
                            "module": "AMD"
                        }
                    }
                }
            }
        }
    }
}
